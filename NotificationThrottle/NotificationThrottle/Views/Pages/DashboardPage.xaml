<Page
    x:Class="NotificationThrottle.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NotificationThrottle.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ui:Button
            Grid.Column="0"
            Command="{Binding ViewModel.CounterIncrementCommand, Mode=OneWay}"
            Content="Click me!"
            Icon="Fluent24" />
        <TextBlock
            Grid.Column="1"
            Margin="12,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding ViewModel.Counter, Mode=OneWay}" />

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,12,0,0"
            Command="{Binding ViewModel.ShowInfoNotificationCommand, Mode=OneWay}"
            Content="Show Info Notification" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="12,12,0,0"
            Command="{Binding ViewModel.ShowWarningNotificationCommand, Mode=OneWay}"
            Content="Show Warning Notification" />
        <Button
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,12,0,0"
            Command="{Binding ViewModel.ShowErrorNotificationCommand, Mode=OneWay}"
            Content="Show Error Notification" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="12,12,0,0"
            Command="{Binding ViewModel.ShowSuccessNotificationCommand, Mode=OneWay}"
            Content="Show Success Notification" />

        <Button
            Grid.Row="3"
            Margin="0 12 0 0"
            Command="{Binding ViewModel.ShowNotificationExtCommand, Mode=OneWay}"
            Content="Show Success Notification" />
    </Grid>
</Page>
